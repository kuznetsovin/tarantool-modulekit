{
  "name": "uikit",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/css": "11.9.0",
    "@tarantool.io/frontend-core": "8.1.1",
    "@tarantool.io/ui-kit": "^0.51.1"
  },
  "devDependencies": {
    "@babel/core": "7.18.2",
    "@babel/eslint-parser": "7.18.2",
    "@babel/preset-flow": "7.17.12",
    "@babel/preset-react": "7.13.13",
    "@babel/runtime": "7.14.0",
    "@emotion/babel-plugin": "11.3.0",
    "@tarantool.io/lua-bundler-webpack-plugin": "2.0.1",
    "@typescript-eslint/eslint-plugin": "5.26.0",
    "@typescript-eslint/parser": "5.26.0",
    "autoprefixer": "10.4.7",
    "babel-jest": "26.6.3",
    "babel-loader": "8.2.5",
    "babel-preset-react-app": "10.0.1",
    "case-sensitive-paths-webpack-plugin": "2.4.0",
    "chalk": "4.1.2",
    "css-loader": "6.7.1",
    "dotenv": "16.0.1",
    "dotenv-expand": "8.0.3",
    "eslint": "8.16.0",
    "eslint-config-react-app": "7.0.0",
    "eslint-plugin-flowtype": "8.0.3",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-react": "7.30.0",
    "eslint-webpack-plugin": "3.1.1",
    "file-loader": "6.2.0",
    "fs-extra": "10.0.0",
    "html-webpack-plugin": "5.5.0",
    "jest": "28.1.0",
    "less-loader": "11.0.0",
    "mime-types": "2.1.35",
    "object-assign": "4.1.1",
    "path-browserify": "1.0.1",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-loader": "7.0.0",
    "promise": "8.1.0",
    "raf": "3.4.1",
    "react-dev-utils": "^12.0.1",
    "style-loader": "3.3.1",
    "svg-sprite-loader": "6.0.11",
    "svgo": "2.8.0",
    "svgo-loader": "3.0.0",
    "terser-webpack-plugin": "5.3.1",
    "typescript": "4.7.2",
    "url": "0.11.0",
    "url-loader": "4.1.1",
    "webpack": "5.72.0",
    "webpack-bundle-analyzer": "4.5.0",
    "webpack-dev-server": "4.9.0",
    "webpack-manifest-plugin": "5.0.0",
    "whatwg-fetch": "3.6.2"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js test --env=jsdom --watch",
    "test_once": "node ./scripts/test.js test --env=jsdom",
    "lint": "NODE_ENV=production eslint ./src",
    "lint-fix": "NODE_ENV=production eslint --fix ./src",
    "config": "plop"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node",
      "mjs"
    ]
  },
  "resolutions": {
    "**/@babel/runtime": "7.17.10"
  },
  "babel": {
    "presets": [
      "@babel/preset-flow",
      [
        "react-app",
        {
          "absoluteRuntime": false
        }
      ]
    ],
    "plugins": [
      "@emotion"
    ]
  }
}
